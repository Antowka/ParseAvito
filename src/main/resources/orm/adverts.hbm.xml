<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="ru.antowka.entity.Advert" table="adverts" lazy="true">

        <id name="advertId" column="advert_id" type="java.lang.Integer">
            <generator class="identity" />
        </id>

        <property name="title" column="title" type="java.lang.String" />
        <property name="description" column="description" type="java.lang.String" />
        <property name="link" column="link" type="java.lang.String" />
        <property name="date" column="date" type="java.lang.String" />
        <property name="name" column="user_name" type="java.lang.String" />
        <property name="agency" column="agency" type="java.lang.String" />
        <property name="city" column="city" type="java.lang.String" />
        <property name="phone" column="phone" type="java.lang.String" />
        <property name="category" column="category" type="java.lang.String" />
    </class>

</hibernate-mapping>